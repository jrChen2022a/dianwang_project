<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F3F5F9">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/topbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#F3F5F9"
        android:elevation="15dp">
        <ImageView
            android:layout_width="12dp"
            android:layout_height="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/setting"
            android:id="@+id/back"
            android:layout_marginStart="25dp"
            android:src="@drawable/back"/>
        <TextView
            android:id="@+id/setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/back"
            android:layout_marginStart="35dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1B1B22"
            android:text="信息修改"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topbar"
        android:id="@+id/settingbar"
        android:orientation="vertical"
        android:paddingTop="23dp"
        android:paddingBottom="20dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@drawable/rounded_bg4">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="297dp"
            android:layout_height="58dp"
            android:id="@+id/cl_name">
            <ImageView
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:id="@+id/avator"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/name"/>

            <ImageView
                android:layout_width="12dp"
                android:layout_height="20dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="25dp"
                android:src="@drawable/foward"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名"
                android:textColor="#1B1B22"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                app:layout_constraintStart_toEndOf="@+id/avator"
                app:layout_constraintBottom_toTopOf="@id/name"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="王五"
                android:textColor="#6C6C7E"
                android:textSize="12sp"
                android:layout_marginLeft="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/avator"
                app:layout_constraintTop_toBottomOf="@+id/textView" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/gray_bar"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="297dp"
            android:layout_height="58dp"
            android:id="@+id/cl_pw">
            <ImageView
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:id="@+id/avator1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/pw"/>

            <ImageView
                android:layout_width="12dp"
                android:layout_height="20dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="25dp"
                android:src="@drawable/foward"/>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码"
                android:textColor="#1B1B22"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                app:layout_constraintStart_toEndOf="@id/avator1"
                app:layout_constraintBottom_toTopOf="@id/name1"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="***"
                android:textColor="#6C6C7E"
                android:textSize="12sp"
                android:layout_marginLeft="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/avator1"
                app:layout_constraintTop_toBottomOf="@+id/textView1" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/gray_bar"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="297dp"
            android:layout_height="58dp"
            android:id="@+id/cl_role">
            <ImageView
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:id="@+id/avator2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/shenfen"/>

            <ImageView
                android:layout_width="12dp"
                android:layout_height="20dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="25dp"
                android:src="@drawable/foward"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身份"
                android:textColor="#1B1B22"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                app:layout_constraintStart_toEndOf="@+id/avator2"
                app:layout_constraintBottom_toTopOf="@id/name2"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="操作员"
                android:textColor="#6C6C7E"
                android:textSize="12sp"
                android:layout_marginLeft="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/avator2"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/gray_bar"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>
    <android.widget.Button
        android:id="@+id/buttonLoginout"
        android:layout_width="328dp"
        android:layout_height="48dp"
        android:background="@drawable/rounded_button_bgred"
        android:text="退出"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/settingbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="25dp"
        android:textColor="#FFFFFF" />

</androidx.constraintlayout.widget.ConstraintLayout>