<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F3F5F9">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/avator_zone"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:background="@drawable/closed5_344"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
        <ImageView
            android:id="@+id/avator"
            android:layout_width="130dp"
            android:layout_height="130dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/name"
            android:src="@drawable/avator42"/>
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="王五"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="35sp"
            app:layout_constraintTop_toBottomOf="@id/avator"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/avator_zone"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_gravity="center"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="101dp"
                android:layout_height="80dp"
                android:background="@drawable/rounded_bg1"
                android:elevation="5dp">
                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="28dp"
                    android:layout_height="20dp"
                    android:src="@drawable/person_info"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/tv1"
                    />
                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#FFFFFF"
                    android:text="个人信息"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/iv1"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="101dp"
                android:layout_height="80dp"
                android:background="@drawable/rounded_bg2"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:elevation="5dp">
                <ImageView
                    android:id="@+id/iv2"
                    android:layout_width="28dp"
                    android:layout_height="20dp"
                    android:src="@drawable/renew"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/tv2"

                    />
                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#FFFFFF"
                    android:text="模型更新"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/iv2"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="101dp"
                android:layout_height="80dp"
                android:background="@drawable/rounded_bg3"
                android:elevation="5dp">
                <ImageView
                    android:id="@+id/iv3"
                    android:layout_width="28dp"
                    android:layout_height="20dp"
                    android:src="@drawable/pic_upload"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/tv3"
                    />
                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#FFFFFF"
                    android:text="上传样本"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/iv3"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:background="@drawable/rounded_bg4"
            android:orientation="vertical"
            android:elevation="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_input"
                android:layout_marginTop="5dp"
                android:paddingBottom="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="巡检任务"
                    android:layout_marginLeft="15dp"
                    android:textColor="#1B1B22"
                    android:textStyle="bold"
                    android:textSize="16sp"/>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardCornerRadius="10dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="5dp">

                <ImageView
                    android:layout_width="123dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/dieluo"
                    android:scaleType="centerCrop"/> <!-- 确保图片填充整个 CardView -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="132dp"
                    android:layout_marginTop="10dp"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="操作票名称：操作票3"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="132dp"
                    android:layout_marginTop="45dp"
                    android:textSize="12sp"
                    android:text="操作设备：跌落式熔断器"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="132dp"
                    android:layout_marginTop="65dp"
                    android:textSize="12sp"
                    android:text="创建时间：2024-04-12 13:26:05"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardCornerRadius="10dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="5dp">

                <ImageView
                    android:layout_width="123dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/zhenkong"
                    android:scaleType="centerCrop"/> <!-- 确保图片填充整个 CardView -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="132dp"
                    android:layout_marginTop="10dp"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="操作票名称：操作票5"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="132dp"
                    android:layout_marginTop="45dp"
                    android:textSize="12sp"
                    android:text="操作设备：真空断路器"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="132dp"
                    android:layout_marginTop="65dp"
                    android:textSize="12sp"
                    android:text="创建时间：2024-04-12 13:29:30"
                    />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>